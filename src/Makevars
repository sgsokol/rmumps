DMUMPS=lib/MUMPS_5.0.1
RANLIB?=ranlib

PKG_CXXFLAGS=-s -I$(DMUMPS)/include
PKG_LIBS= -L./lib -lallmumps -lesmumps -lscotch -lscotcherr -lpthread $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)

$(SHLIB): lib/liballmumps.a

lib/liballmumps.a:
	@($(MAKE) -C lib \
	  CC="$(CC)" FC="$(FC)" CFLAGS="-s $(CFLAGS) $(CPICFLAGS)" FCFLAGS="-s $(FCFLAGS) $(FPICFLAGS)" AR="$(AR)" RANLIB="$(RANLIB)")
